generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("DATABASE_URL")
}

model user {
  clerkId String @id @default(uuid())
  name String
  email String
}

model bookTime {
  id          String   @id @default(uuid())
  userId      String
  firstName   String
  lastName    String
  phoneNumber String
  reason      String
  startDate   DateTime
  endDate     DateTime
  updatedAt   DateTime @updatedAt
  createdAt   DateTime @default(now())
  notes       Note[]   
}

model Note {
  id        String   @id @default(uuid())
  bookTime  bookTime @relation(fields: [bookTimeId], references: [id])
  bookTimeId String  
  note String
  updatedAt   DateTime @updatedAt
  createdAt   DateTime @default(now())
}
